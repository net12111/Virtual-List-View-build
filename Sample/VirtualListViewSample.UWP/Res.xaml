<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Xamarin.CommunityToolkit.UI.Views"
	xmlns:controls="using:Microsoft.UI.Xaml.Controls">

	<DataTemplate x:Key="ItemsViewDefaultTemplate">
		<local:VirtualItemContentControl 
			x:Name="VirtualItemContentControl" 
			FormsDataTemplate="{Binding FormsDataTemplate}"
			FormsDataContext="{Binding Item}"
			FormsContainer="{Binding Container}">
		</local:VirtualItemContentControl>
	</DataTemplate>
</ResourceDictionary>
