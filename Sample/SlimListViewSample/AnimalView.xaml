<?xml version="1.0" encoding="UTF-8"?>
<ContentView
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="SlimListViewSample.AnimalView">
	<ContentView.Content>
		<Frame BackgroundColor="LightGray" HasShadow="False" CornerRadius="14" Margin="10,5,10,5" Padding="10">
			<StackLayout VerticalOptions="FillAndExpand">
				<Label Text="Animal" FontSize="Title" />
				<Label Text="{Binding Breed}" />
				<Label Text="{Binding Sound}" />
				<Label Text="{Binding Description}" MaxLines="20" />
			</StackLayout>
		</Frame>
	</ContentView.Content>
</ContentView>